{
  "kind": "collectionType",
  "collectionName": "games",
  "info": {
    "name": "Games"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "platform": {
      "model": "platform"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "discount": {
      "type": "integer"
    },
    "poster": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "url": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "video": {
      "type": "string",
      "required": true
    },
    "screenshot": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "releaseDate": {
      "type": "date",
      "required": true
    }
  }
}
